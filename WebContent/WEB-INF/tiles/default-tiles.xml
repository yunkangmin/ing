<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>


	<definition name="t_default" template="/WEB-INF/view/mainTemplate.jsp">
		<put-attribute name="title" value="Spring MVC"></put-attribute>
		<put-attribute name="side" value="/WEB-INF/view/side-01.jsp"></put-attribute>

	</definition>
	<definition name="t_index" extends="t_default">

		<put-attribute name="main" value="/WEB-INF/view/login.jsp"></put-attribute>

	</definition>
	<!-- 오버라이드 -->
	<definition name="t_join" extends="t_default">
		<put-attribute name="title" value="Sign Up Spring"></put-attribute>
		<put-attribute name="main" value="/WEB-INF/view/join.jsp"></put-attribute>

	</definition>
	<!-- EL support ${main}정확하게 있어야만 작동
	모델에 세팅시켜노은 것을 el로 써먹을수있다.include보다 편하다.
	 -->

<definition name="t_el" extends="t_default">
<put-attribute name="main" expression="/WEB-INF/view/${main}"></put-attribute>



</definition>
<definition name="t_el_title" extends="t_default">
<put-attribute name="title" expression="${title}"></put-attribute>
<put-attribute name="main" expression="/WEB-INF/view/${main}"></put-attribute>



</definition>

</tiles-definitions>