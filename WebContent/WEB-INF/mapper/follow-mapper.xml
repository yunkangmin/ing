<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="follow">

<insert id="insert">

insert into friend values(friend_seq.nextval,#{one},#{other},#{status},sysdate)
</insert>

<select id="select" resultType="hashmap">

select * from friend where other=#{other} and status=0
</select>

<update id="update">

update place set status=#{status} where no=#{no}	

</update>
<delete id="delete">


delete from friend where gender='2';
</delete>


</mapper>




